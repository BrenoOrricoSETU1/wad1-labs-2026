{{>menu id="about"}}
<section class="ui center aligned middle aligned segment">
    <h2>About the team of Playlist App!</h2>


<div class="ui centered cards">
    {{#each employee}}    
     <div class="card">
        <div class="image">
            <img src="{{image}}" alt="">
        </div>
        <div class="content">
            <a class="header">{{fullname}}</a>
        </div>
        <div class="meta">
            <span class="date">Joined in {{joined}}</span>
        </div>
        <div class="description">
            {{name}} is a/an {{job}} living in {{city}}.
        </div>
        <div class="extra content">
            <a>
                <i class="user icon"></i>
                {{mates}} contacts
            </a>
        </div>
    </div>
    {{/each}}
</div>
</section>